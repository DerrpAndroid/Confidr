  <script>
      $(document).ready(function(){
          var sface=$('.sad-face');
          var hface=$('.happy-face');
          var sleepamt=$('.sleepamt');
          var food = $('.food');
          var weight = $('.weight');
          $('.formprev').click(function(){
              $(this).parent().parent().hide();
              $(this).parent().parent().prev().show();
          });
          $('.formnext').click(function(){
              $(this).parent().parent().hide();
              $(this).parent().parent().next().show();
          });
          $('#slider').slider({
              min:0,
              max:4,
              value:2,
              slide: function( event, ui ) {
                  $( "#happiness" ).val(ui.value * 25);
                  switch(ui.value){
                      case 0:
                          sface.stop().animate({backgroundColor:'yellow'});
                          hface.stop().animate({backgroundColor:'gray'});
                          break;
                      case 1:
                          sface.stop().animate({backgroundColor:'#CDCD3A'});
                          hface.stop().animate({backgroundColor:'#96966C'});
                          break;
                      case 2:
                          sface.stop().animate({backgroundColor:'#B3B355'});
                          hface.stop().animate({backgroundColor:'#B3B355'});
                          break;
                      case 3:
                          sface.stop().animate({backgroundColor:'#96966C'});
                          hface.stop().animate({backgroundColor:'#CDCD3A'});
                          break;
                      case 4:
                          sface.stop().animate({backgroundColor:'gray'});
                          hface.stop().animate({backgroundColor:'yellow'});
                          break;
                  }
              }
          });
          $('#health-slider').slider({
              min:0,
              max:4,
              value:2,
              slide: function( event, ui ) {
                  $( "#health" ).val(ui.value * 25);
                  switch(ui.value){
                      case 0:
                          weight.stop().animate({opacity:'.1'});
                          food.stop().animate({opacity:'1'});
                          break;
                      case 1:
                          weight.stop().animate({opacity:'.4'});
                          food.stop().animate({opacity:'.8'});
                          break;
                      case 2:
                          weight.stop().animate({opacity:'.6'});
                          food.stop().animate({opacity:'.6'});
                          break;
                      case 3:
                          weight.stop().animate({opacity:'.8'});
                          food.stop().animate({opacity:'.4'});
                          break;
                      case 4:
                          weight.stop().animate({opacity:'1'});
                          food.stop().animate({opacity:'.1'});
                          break;
                  }
              }
          });
          $('#sleep-slider').slider({
              orientation:"vertical",
              min:5,
              max:10,
              slide: function( event, ui ) {
                  $( "#sleep_hours" ).val(ui.value);
                  switch(ui.value){
                      case 5:
                          sleepamt.stop().animate({height:'7%'});
                          break;
                      case 6:
                          sleepamt.stop().animate({height:'20%'});
                          break;
                      case 7:
                          sleepamt.stop().animate({height:'40%'});
                          break;
                      case 8:
                          sleepamt.stop().animate({height:'60%'});
                          break;
                      case 9:
                          sleepamt.stop().animate({height:'80%'});
                          break;
                      case 10:
                          sleepamt.stop().animate({height:'100%'});
                          break;
                  }
              }
          });
          $('.medyes').click(function(){
              $('.medimg').css('background','#50CD73');
              $('#meditate').val('1');
          });
          $('.medno').click(function(){
              $('.medimg').css('background','#FD7F7F');
              $('#meditate').val('0');
          });
          $(".overlay").click(function(){
              $(".overlay").css({
                  "display":"",
              });
              $(".center_main").css({
                  "zIndex":"",
              });
              $(".post_heading,.post_body").css({
                  "width":"",
              });
              $(".prompt").css({
                  "display":"",
              });

              $(".tag_submit,.btn.btn-primary").css({
                  "display":"",
              });
              $(".questions").css({
                  display:""
              });
          });
          $(".notification").click(function(){
              $(".noti_container").css({
                  "height":"83%",
              });
              $(".close_noti").fadeIn("slow");
          }); // expand grid 8
          $(".close_noti").click(function(){
              $(".noti_container").css({
                  "height":"18%",
              });
              $(".close_noti").fadeOut("slow");
          });// close grid 8
          $("#post_archives").click(function(){
              $(".tag_col").css({
                  "width":"98%",
                  "z-index":"100"
              });
              $(".tag_list").css({
                  display:"none",
              });
              $(".close_tag").fadeIn("slow");
              $(".archivey-stuff").html('<%= render 'archives_tags' %>'); //  render "archives_tags" paste this inside html function. breaking for some reason
          });// expand grin 4 works
          $(".close_tag").click(function(){
              $(".tag_col").css({
                  "width":""
              });
              $(".tag_list").css({
                  display:"block",
              });
              $(".close_tag").fadeOut("fast");
              $(".archivey-stuff").html('');
          });//close grid 4 works
          var metrics_toggle;
          $(".metrics").click(function(){
              if(!metrics_toggle)
              {
                  $(".metrics").animate({
                      width:"+=81%",
                      marginLeft:"-=81%",
                  });
                  $("#chart-1").css({width:"20%",marginLeft:"20%"});
                  $("#stats,#chart,#chart1").css({display:"block"});
                  document.getElementById("metrics_tog").style.display="block";
                  metrics_toggle=1;
              }
              else if(metrics_toggle){
                  $(".metrics").animate({
                      width:"16.6666%",
                      marginLeft:""
                  });
                  $("#chart-1").css({width:"100%",marginLeft:""});
                  $("#stats,#chart,#chart1").css({display:"none"});
                  metrics_toggle=0;
              }
          }); //open and close metrics grid
          $(".btn.btn-primary").click(function(){
              $(".questions").css({
                  display:"block"
              });

              $("#post_submit_after_question").click(function(){
                  $("#new_micropost").submit();
              });


              //$("#new-micropost").submit();
          });
      });
  </script>

