  <div class="col-xs-7 center_main" id="center_main">
    <%= form_for(@micropost, remote: true,authenticity_token: true) do |f| %>

    <div class="col-xs-12 post_heading">
      <%= f.text_field :title, id:"post_heading", placeholder: "Post Title" %>
    </div>
    <div class="col-xs-12 post_body">
      <%= f.text_area :content,:size => "30x10", id:"post_body", placeholder: "Feelings go here" %>
    </div>
    <div class="tag_submit">
      <ul class="tags_stuff">
       <li> <%=f.radio_button :tag,"gratefulness"%><%= f.label :tag, 'Gratefulness', :value => 'gratefulness' %></li>
        <li> <%=f.radio_button :tag,"moments"%><%= f.label :tag, 'Moments', :value => 'moments' %></li>
        <li> <%=f.radio_button :tag,"optimism"%><%= f.label :tag, 'Optimism', :value => 'optimism' %></li>
        <li><%=f.radio_button :tag,"consolation"%><%= f.label :tag, 'Consolation', :value => 'consolation' %></li>
        <li> <%=f.radio_button :tag,"lessons"%><%= f.label :tag, 'Lessons', :value => 'lessons' %></li>
        <li><%=f.radio_button :tag,"actualities"%><%= f.label :tag, 'Actualities', :value => 'actualities' %></li>
        <li> <%=f.radio_button :tag,"ambitions"%><%= f.label :tag, 'Ambitions', :value => 'ambitions' %></li>
        <li> <%=f.radio_button :tag,"inspiration"%><%= f.label :tag, 'Inspiration', :value => 'inspiration' %></li>
      </ul>
    </div>
    <div class="prompt" style="display:none">Need a pointer?</div><%= button_tag "Stuff", class: "btn btn-primary",:type=>"button" %>
        <div class="col-xs-12" style="display:none">
          <%= f.text_field :happiness, id:"happiness", placeholder: "How Happy are you?",value:50 %>
          <%= f.text_field :sleephours, id:"sleep_hours", placeholder: "How Many Hours Of Sleep?",value:5 %>
          <%= f.text_field :meditate, id:"meditate", placeholder: "Did you meditate?",value:0 %>
          <%= f.text_field :health, id:"health", placeholder: "Your Diet", value: "50" %>
          <button id="post_submit_after_question">Submit Forms</button>
        </div>
        <div class="questions center_main col-xs-7" id="questions" style="display:none;width:100%;height:100%;top:0px;left:0px;">
          <div class="qhappiness" style="display:block;">
            <h2>How happy are you today?</h2>
            <div class="faces">
              <%= image_tag("sad70.png", alt: "Sad Face",class:'sad-face')  %>
              <%= image_tag("happy47.png", alt: "Happy Face",class:'happy-face') %>
            </div>
            <div id="slider"></div>
            <div class="controls">
              <button type="button" class="formnext">Next</button>
            </div>
          </div>
          <div class="qmeditate" style="display:none;">
            <h2>Did you meditate in the last 24 hours?</h2>
            <div class="meditation">
              <%= image_tag("yoga14.png", alt: "Meditation",class:'medimg')  %>
            </div>
            <div class="meditatebuttons">
                <button type="button" class="medyes">Yes</button>
                <button type="button" class="medno">No</button>
            </div>
                <div class="controls">
                  <button type="button" class="formprev">Prev</button>
                  <button type="button" class="formnext">Next</button>
                </div>
          </div>
          <div class="qsleep" style="display:none;">
            <h2>How much sleep did you get last night?</h2>
            <div>
                <div class="sleepmeter">
                  <div class="sleepamt"></div>
                  <%= image_tag("battery123.png", alt: "Sleep Meter",class:'sleepmeter')  %>
                </div>
                <div id="sleep-slider"></div>
            </div>
            <div class="controls">
                <button type="button" class="formprev">Prev</button>
                <button type="button" class="formnext">Next</button>
              </div>
            </div>
          <div class="qhealth" style="display:none;">
            <h2>Considering your diet and excercise how healthy your last 24 hours been?</h2>
            <div class="health">
              <%= image_tag("fast-food7.png", alt: "Fast Food",class:'food')  %>
              <%= image_tag("weightlifting4.png", alt: "Weight Lifting",class:'weight') %>
            </div>
            <div id="health-slider"></div>
            <div class="controls">
              <button type="button" class="formprev">Prev</button>
              <button id="post_submit_after_question">Submit Forms</button>
            </div>
          </div>
        </div>
  <% end %>
  </div> <!- end form -->
  <div class="col-xs-2 metrics"><h3>Metrics</h3><span class="close_noti" style="float:right" id="metrics_tog">X</span>
    <div><%= pie_chart Micropost.group(:senti).count %></div>
    <div id="stats">
      <p>Your Average Post Length is : <%= @avg_post_lenght.inspect %></p>
        <p>The most used tag is : "<%= @maxi.keys[0] %>" and it was used <%=h @maxi.values[0] %> time(s)</p>
      <p><% if @happysleep %>You were the happiest when you had  <%= @happysleep.values[8] %> hours sleep <% end %></p>
    </div>
    <div id='chart' style="float:left"></div>
    <%= render_chart @chart, 'chart' %>
    <div id='chart1' style="float:left"></div>
    <%= render_chart @chart1, 'chart1' %>

  </div>
</div>
